      <button type="submit" class="btn btn-secondary float-left" data-dismiss="modal">Annuler</button>
      <button type="button" id="deleteCandidate" class="btn btn-outline-info float-right" style="margin-bottom: 5px;">
        Continuer
      </button>
    </div>
  </div>
</div>