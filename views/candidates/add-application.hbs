<style>
  .checkbox label::before {
    content: "";
    margin-top: 20px;
    transform: scale(1.5);
  }

  .checkbox label::after {
    top: 19px;
    font-size: 21px;
  }

  .nav-tabs .nav-item:first-child {
    margin-left: 15%;
  }
</style>

<div class="row">
  <div class="col-lg-12 col-12">
    <div class="wizard card">
      <div class="card-header wizard-inner">
        <ul class="nav nav-tabs" role="tablist">
          <li role="presentation" class="active nav-item">
            <a class="tabWizard" href="#step1" data-toggle="tab" aria-controls="step1" role="tab" title="Contrat">
              <span class="round-tab">
                <i class="fal fa-handshake"></i>
              </span>
            </a>
          </li>
          <li role="presentation" class="disabled nav-item">
            <a class="tabWizard" href="#step2" data-toggle="tab" aria-controls="step2" role="tab"
               title="Disponibilités">
              <span class="round-tab">
                <i class="fal fa-calendar-check"></i>
              </span>
            </a>
          </li>
          <li role="presentation" class="disabled nav-item">
            <a class="tabWizard" href="#step3" data-toggle="tab" aria-controls="step3" role="tab"
               title="Établissements">
              <span class="round-tab">
                <i class="fal fa-hospital"></i>
              </span>
            </a>
          </li>
          <li role="presentation" class="disabled nav-item">
            <a class="tabWizard" href="#complete" data-toggle="tab" aria-controls="complete" role="tab"
               title="Validation">
              <span class="round-tab">
                <i class="fal fa-check"></i>
              </span>
            </a>
          </li>
        </ul>
      </div>
      <form role="form">
        <div class="tab-content" style="padding:30px">
          <div class="tab-pane active" role="tabpanel" id="step1">
            <div class="row">
              <div class="col-sm-12">
                <h1 class="text-bold">Sélectionnez votre type de contrat</h1>
              </div>
            </div>
            <hr>
            <div id="contractType" class="row">
              <div class="col-sm-3">
                <h2 class="text-bold">Type de contrat *:</h2>
              </div>
              <div class="col-sm-9">
                <div id="contracts" class="row sub-step">
                  <div class="form-group col-4">
                    <div class="checkbox">
                      <input id="cdi-cdd" name="cdi-cdd" type="checkbox">
                      <label for="cdi-cdd">
                        <h1>CDI / CDD</h1>
                      </label>
                    </div>
                  </div>
                  <div class="form-group col-4">
                    <div class="checkbox">
                      <input id="vacation" name="vacation" type="checkbox">
                      <label for="vacation">
                        <h1>VACATION</h1>
                      </label>
                    </div>
                  </div>
                  <div class="form-group col-4">
                    <div class="checkbox">
                      <input id="internship" name="internship" type="checkbox">
                      <label for="internship">
                        <h1>STAGE</h1>
                      </label>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-12">
                <hr>
              </div>
            </div>
            <div id="activityType" class="row" style="display: none;">
              <div class="col-sm-3">
                <h2 class="text-bold">Type d'activité *:</h2>
              </div>
              <div class="col-sm-9">
                <div id="activity" class="row sub-step">
                  <div class="form-group col-sm-4">
                    <div class="checkbox">
                      <input id="full_time" name="full_time" type="checkbox">
                      <label for="full_time">
                        <h3>Temps plein</h3>
                      </label>
                    </div>
                  </div>
                  <div class="form-group col-sm-4">
                    <div class="checkbox">
                      <input id="part_time" name="part_time" type="checkbox">
                      <label for="part_time">
                        <h3>Temps partiel</h3>
                      </label>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-md-12">
                <hr>
              </div>
            </div>
            <div id="timeType" class="row" style="display: none;">
              <div class="col-sm-3">
                <h2 class="text-bold">Aménagement horaire *:</h2>
              </div>
              <div class="col-sm-9">
                <div id="time" class="row sub-step">
                  <div class="form-group col-sm-4">
                    <div class="checkbox">
                      <input id="daytime" name="daytime" type="checkbox">
                      <label for="daytime">
                        <h3>Jour</h3>
                      </label>
                    </div>
                  </div>
                  <div class="form-group col-sm-4">
                    <div class="checkbox">
                      <input id="nighttime" name="nighttime" type="checkbox">
                      <label for="nighttime">
                        <h3>Nuit</h3>
                      </label>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-md-12">
                <hr>
              </div>
            </div>
            <div id="postType" class="row">
              <div class="col-sm-3">
                <h4 class="text-bold">Type de poste *:</h4>
              </div>
              <div class="col-9">
                <div class="form-group col-12" style="margin-top: 25px">
                  <label for="selectPostType">
                    <select class="form-control col-12" id="selectPostType">
                      {{#each posts as |post|}}
                        <option value="{{post.id}}" data-categorie="{{post.categoriesPS_id}}">{{post.name}}</option>
                      {{/each}}
                    </select>
                  </label>
                </div>
              </div>
              <div class="col-md-12">
                <hr>
              </div>
            </div>
            <div id="serviceType" class="row">
              <div class="col-sm-3">
                <h4 class="text-bold">Préférence de service (facultatif) :</h4>
              </div>
              <div class="col-sm-9">
                <div class="form-group col-sm-12" style="margin-top: 25px">
                  <label for="selectServiceType">
                    <select class=selectpicker" id="selectServiceType" multiple data-live-search="true"
                            title="Services" disabled>
                      {{#each services as |service|}}
                        <option value="{{service.id}}"
                                data-categorie="{{service.categoriesPS_id}}">{{service.name}}</option>
                      {{/each}}
                    </select>
                  </label>
                </div>
              </div>
              <div class="col-md-12">
                <hr>
              </div>
            </div>
            <ul class="list-inline float-right">
              <li>
                <button type="button" class="btn btn-danger stop-step">Annuler</button>
              </li>
              <li>
                <button type="button" data-step="1" class="btn btn-info next-step">Continuer</button>
              </li>
            </ul>
          </div>
          <div class="tab-pane" role="tabpanel" id="step2">
            <div class="row">
              <div class="col-sm-12">
                <h4 class="text-bold">Votre disponibilité</h4>
              </div>
            </div>
            <hr>
            <div class="row">
              <div id="internshipDate">
                <div class="col-md-6"><label for="start">Du *</label>
                  <input id="start" name="start" type="text"
                         class="form-control input-md from" required="" autocomplete="off">
                </div>
                <div class="col-md-6">
                  <label for="end">Au *</label>
                  <input id="end" name="end" type="text"
                         class="form-control input-md to" autocomplete="off">
                </div>
              </div>
              <ul class="list-inline float-right">
                <li>
                  <button type="button" class="btn btn-default prev-step">Précédent</button>
                </li>
                <li>
                  <button type="button" class="btn btn-danger stop-step">Annuler</button>
                </li>
                <li>
                  <button type="button" data-step="2" class="btn btn-primary next-step">Continuer</button>
                </li>
              </ul>
            </div>
          </div>

          <div class="tab-pane" role="tabpanel" id="step3">

            <div class="row">
              <div class="col-sm-12">
                <h4 class="text-bold">Où souhaitez-vous postuler ?</h4>
              </div>
            </div>

            <div class="nav-tabs-navigation">
              <div class="nav-tabs-wrapper">
                <ul id="tabsStep3" class="nav nav-tabs" data-tabs="tabs">
                  <li class="active"><a id="searchAroundMe" href="#gps" data-toggle="tab" aria-expanded="true">Autour de
                    moi</a></li>
                  <li><a id="searchByAddress" href="#gps" data-toggle="tab" aria-expanded="false">A partir d'une
                    adresse</a></li>
                  <li><a id="searchAllOver" href="#nogps" data-toggle="tab" aria-expanded="false">Partout en France</a>
                  </li>
                </ul>
              </div>
            </div>

            {{>candidate/geolocation}}

            <ul class="list-inline float-right">
              <li>
                <button type="button" class="btn btn-default prev-step">Précédent</button>
              </li>
              <li>
                <button type="button" class="btn btn-danger stop-step">Annuler</button>
              </li>
              <li>
                <button type="button" data-step="3" class="btn btn-info btn-info-full next-step">Continuer</button>
              </li>
            </ul>
          </div>

          <div class="tab-pane" role="tabpanel" id="complete">
            <div class="row">
              <div class="col-sm-12 text-center">
                <h3>Récapitulatif</h3>
                <hr>
              </div>
              <div id="recapContractType" class="col-md-4">
                <div class="panel panel-resume">
                  <div class="panel-heading">
                    Type de contrat souhaité
                  </div>
                  <div class="panel-body text-center">
                    <h3></h3>
                  </div>
                </div>
              </div>
              <div id="recapActivityType" class="col-md-4">
                <div class="panel panel-resume">
                  <div class="panel-heading">
                    Type d'activité
                  </div>
                  <div class="panel-body text-center">
                    <h3></h3>
                    <h3></h3>
                  </div>
                </div>
              </div>
              <div id="recapHourType" class="col-md-4">
                <div class="panel panel-resume">
                  <div class="panel-heading">
                    Amenagement horaire
                  </div>
                  <div class="panel-body text-center">
                    <i></i>
                    <i></i>
                  </div>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-sm-12">
                <div class="panel panel-resume">
                  <div class="panel-heading">
                    Mes disponibilités
                  </div>
                  <div id="availability" class="panel-body text-center">
                    <h3></h3>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12">
                  <div class="panel panel-resume">
                    <div class="panel-heading">
                      Etablissement(s) choisi(s)
                    </div>
                    <div class="panel-body"
                         style="min-height:500px;max-height: 500px;overflow-y: scroll;overflow-x: hidden">

                      <table class="table">
                        <thead>
                        <tr>
                          <th>ES</th>
                          <th>Type d'ES</th>
                          <th>Région</th>
                        </tr>
                        </thead>
                        <tbody id="finalESList">
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <ul class="list-inline float-right">
              <li>
                <button type="button" class="btn btn-danger stop-step">Annuler</button>
              </li>
              <li>
                <button type="button" class="btn btn-default prev-step">Précédent</button>
              </li>
              <li>
                <button type="button" class="btn btn-success btn-info-full" onclick="addWishName()">Valider et
                  sauvegarder
                </button>
              </li>
            </ul>
          </div>
          <div class="clearfix"></div>
        </div>
      </form>
    </div>
  </div>
</div>
