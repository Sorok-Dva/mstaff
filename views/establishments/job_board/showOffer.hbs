{{log offer}}
<style>
  .shadow-grey{
    box-shadow: 0px 3px 5px grey;
  }
  .inline-block{
    display: inline-block;
  }
  .add-section-item{
    display: none;
    color: #A5A5A5;
  }
  .add-section-title{
    color: #5AA3E8;
  }
  .custom-cursor{
    cursor: pointer;
  }
  .margin-0{
    margin: 0;
  }
  .add-section-item:hover{
    color:black;
  }
  .input-blue{
    background-color: #D6EAFA;
  }
</style>

<div class="row text-center justify-content-between">
  <div id="sectionsPart" class="col-4">

    <div id="addSection" class="mb-5">
      <ul class="list-group shadow-grey custom-cursor">
        <li class="list-group-item add-section-title">
          <div class="d-flex justify-content-between">
            <span>Ajouter la section</span><span><i class="fal fa-chevron-down chevron"></i></span>
          </div>
        </li>
        <li id="addDetails" class="list-group-item add-section-item"><div class="text-left"><i class="fal fa-plus"> Ajouter détails de l'offre</i></div></li>
        <li id="addPostDescription" class="list-group-item add-section-item"><div class="text-left"><i class="fal fa-plus"> Ajouter description du poste</i></div></li>
        <li id="addRequirement" class="list-group-item add-section-item"><div class="text-left"><i class="fal fa-plus"> Ajouter prérequis</i></div></li>
        <li id="addTerms" class="list-group-item add-section-item"><div class="text-left"><i class="fal fa-plus"> Ajouter modalités de candidature</i></div></li>
      </ul>
    </div>

    <div id="natureSection" class="mb-5">
      <ul class="list-group shadow-grey">
        <li class="list-group-item nature-section-title">
          <div class="d-flex justify-content-between">
            <span>Nature de l'offre</span><span><i class="fal fa-edit custom-cursor" onclick="editSection('natureSection')"></i></span>
          </div>
        </li>
        <li class="list-group-item nature-section-item">
          <div class="text-left">
            <p class="margin-0 nature-p-1"></p>
            <p class="margin-0 nature-p-2"></p>
          </div>
        </li>
      </ul>
    </div>

    <div id="contextSection" class="mb-5">
      <ul class="list-group shadow-grey">
        <li class="list-group-item nature-section-title">
          <div class="d-flex justify-content-between">
            <span>Contexte de travail</span><span><i class="fal fa-edit custom-cursor" onclick="editSection('contextSection')"></i></span>
          </div>
        </li>
        <li class="list-group-item nature-section-item">
          <div class="text-left">
            <p class="margin-0">Localisation du poste</p>
            <p class="margin-0 context-p-2"></p>
          </div>
        </li>
      </ul>
    </div>

  </div>
  <div id="formsPart" class="col-7">

  </div>
</div>

<script>

  let needData = `{{{json offer}}}`;
  needData = JSON.parse(needData);

  let offerData = {
    nature_section: {
      natureDate: needData.createdAt,
      natureTitle: needData.name,
      natureJobSheet: '',
      natureContractType: needData.nature_section.contract_type,
      natureJobStartDate: needData.nature_section.start,
      natureContractDuration: '',
      natureGrade: '',
      natureCategory: '',
    },
    context_section: {
      contextLocalisation: needData.context_section.place,
      contextAddress: needData.context_section.address,
      contextAttach: '',
      contextSite: needData.context_section.website,
      contextPole: '',
      contextPresentation: '',
    },
    details_section: {
      detailsSchedule: '',
      detailsRoll: '',
      detailsQuota: '',
      detailsStrain: '',
      detailsAccess: '',
      detailsHousing: '',
      detailsRemuneration: '',
      detailsRisk: '',
    },
    postDescription_section: {
      postPresentation: '',
      postTeam: '',
      postUphill: '',
      postBacking: '',
      postExternal: '',
      postInternal: '',
      postInternService: '',
    },
    requirement_section: {},
    terms_sections: {},
  }

  //TODO créé les objets postDescription_section requirement_section && terms_sections
</script>

<script src="/static/assets/dist/js/job_board.min.js"></script>