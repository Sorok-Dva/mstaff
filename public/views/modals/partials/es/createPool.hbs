<link href="/static/assets/css/multiple-emails.css" rel="stylesheet">
<link href="https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css" rel="stylesheet">
<script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>
<script src="/static/assets/js/multiple-emails.js"></script>
<style>
  .class-icon {
    text-align: center;
    margin-top: 15px;
  }
  .header-spacing {
    margin-top: 15px;
  }
  .toggle.ios, .toggle-on.ios, .toggle-off.ios {
    border-radius: 20px;
    background-color: #D8D8D8;
  }
</style>
<div class="modal-body">
  <div class="form-group">
    <label id="label"> Nom de votre pool </label>
    <input id="poolName" type="text" class="form-control" style="display:none">
    <div style="display:flex">
      <input id="personnalMails" type="text" class="form-control">
      <button class="btn btn-outline-info" style="margin-left: 10px"> + </button>
    </div>
  </div>
</div>
<div class="modal-footer">
  <button type="button" id="addPersonnelButton" class="btn btn-outline-info float-right" style="margin-bottom: 5px;" onclick="personnelStep()">
    Ajouter des soignants
  </button>
  <button type="button" id="createPoolButton" class="btn btn-outline-info float-right" style="margin-bottom: 5px; display:none"">
    Valider
  </button>
</div>
<script>
  $(document).ready(function() {
    $('#personnalMails').multiple_emails({
      position: 'top',
      theme: 'bootstrap',
      checkDupEmail: true
    });
  });
</script>