<script src="/static/assets/js/bootstrap-selectpicker.js"></script>
<div class="modal-body">
  <div class="form-group">
    <label for="equipmentID"> Choisir une comp√©tence  </label>
    <select id="equipmentID" class="selectpicker" data-live-search="true">
    </select>
    <label for="postID"> Choisir un poste  </label>
    <select id="postID" class="selectpicker" data-live-search="true">
    </select>
    <label for="serviceID"> Choisir un service service  </label>
    <select id="serviceID" class="selectpicker" data-live-search="true">
    </select>
  </div>
</div>
<div class="modal-footer">
  <button type="button" class="btn btn-default" id="validateConfigEquipment"> Valider les modifications </button>
</div>
<script>
  $.get('/api/equipments/all', function(data) {
    $.each(data.equipments, function (i, equipment) {
      $('#equipmentID').append($('<option>', {
        value: equipment.id,
        text : equipment.name
      }));
      $('#equipmentID').selectpicker('refresh');
    });
  });
  $.get('/api/posts/all', function(data) {
    $.each(data.posts, function (i, post) {
      $('#postID').append($('<option>', {
        value: post.id,
        text : post.name
      }));
      $('#postID').selectpicker('refresh');
    });
  });
  $.get('/api/services/all', function(data) {
    $.each(data.services, function (i, service) {
      $('#serviceID').append($('<option>', {
        value: service.id,
        text : service.name
      }));
      $('#serviceID').selectpicker('refresh');
    });
  });
  $('#equipmentID').selectpicker();
  $('#postID').selectpicker();
  $('#serviceID').selectpicker();
</script>
