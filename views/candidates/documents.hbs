                                                    <i class="fa fa-star"></i>
                                                </li>
                                                <li class="star {{rating software.stars 3}}" title="Excellent" data-value='3'>
                                                    <i class="fa fa-star"></i>
                                                </li>
                                            </ul>
                                        </div>
                                    </td>
                                    <td>
                                        <button class="btn btn-simple btn-danger btn-icon remove" data-type="software" data-id="{{software.id}}">
                                            <i class="fa fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
