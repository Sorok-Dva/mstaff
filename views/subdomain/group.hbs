<header class="page-header">
    <div class="container">

        <div class="push">
            <div class="aic">
                <div class="image-ratio image-ratio-100 image-round header-logo" style="background-image:url('{{group.logo}}');"></div>
                <div>
                    <span class="header-title-label">Groupe</span>
                    <h1 class="header-title">{{group.name}}</h1>
                </div>
            </div>
            <div class="aic">
                <a href="#" class="button button-pink button-fluid">Site web</a>
                <a href="/join" class="button button-pink button-fluid">Candidature spontanée</a>
            </div>
        </div>

    </div>
</header>

<div class="container-fluid">

    <div class="row">

        <div class="col-sm-6 p-0">

            <div class="page-banner">
                <div class="image-ratio image-ratio-40" style="background-image:url('{{group.banner}}');"></div>
                <div class="page-banner__shadow"></div>
            </div>

        </div>

        <div class="w-100"></div>

        <div class="col-sm-6 col-lg-4 offset-lg-1">

            <h1 class="baseline baseline-page">Retrouvez ici les <span>établissement</span> du groupe <span>{{group.name}}</span></h1>

            <div class="row card-list">

                {{#each group.es as |data|}}
                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card__header">
                                <div class="card__legend"><i class="far fa-map-marker-alt"></i> {{data.es.town}}</div>
                            </div>
                            <div class="card__thumbnail-container"></div>
                            <div class="card__body content-type-text">
                                <h3 class="card__body__title title">{{data.es.name}}</h3>
                            </div>
                            <div class="card__footer">
                                <a href="" class="button button-pink">Postuler</a>
                            </div>
                        </div>
                    </div>
                {{/each}}

            </div>

        </div>

        <div class="w-100"></div>

    </div>

    <footer class="page-footer">
        <img src="/assets/images/LOGO_WEB_118_PX.png" alt="mstaff">
    </footer>

</div>

<div class="map-container">
    <div id="map"></div>
</div>

<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBMyQuBw8EQ6YixI2_Fxbw_OSmyVnnVocI&libraries=places"></script>
<script>
    let locations = [];
    {{#each group.es as |data|}}
        locations.push();
    {{/each}}
    if (document.getElementById('map')) {
        let pos = {lat: 43.599072, lng: 1.440293, rayon: 5};
        let map = new google.maps.Map(document.getElementById('map'), {
            zoom: 10,
            center: pos,
            mapTypeControl: false
        });
        /*marker = new google.maps.Marker({
            position: pos,
            map: map
        });*/
        cityCircle = new google.maps.Circle({
            strokeColor: '#337AB7',
            strokeOpacity: 0.8,
            strokeWeight: 2,
            fillColor: '#5BBBE5',
            fillOpacity: 0.35,
            map: map,
            //center: pos,
            //radius: pos.rayon * 1000 || 10000
        });
    }
</script>