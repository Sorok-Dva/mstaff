<style>
   #stars div i:nth-child(even){
    display: none;
  }
</style>

<div class="row justify-content-between align-items-center openRecap">
  <i id="backToQualification" class="fal fa-arrow-circle-left fa-2x custom-cursor"></i>
  <div class="text-center col-3 d-none d-lg-block custom-cursor openRecap">
    <i class="fal fa-low-vision col-5"></i>
    <p>Afficher mes compétences</p>
  </div>
</div>

<nav id="recap" class="navbar navbar-vertical fixed-right navbar-expand-md navbar-light d-none">
  <i class="fal fa-arrow-alt-from-left custom-cursor closeRecap"></i>
  <h2 class="text-center underline recap">Aperçu de vos compétences</h2>
</nav>

<div class="height-80 d-flex flex-column justify-content-center">
  <form id="skillForm">
    <div class="form-group text-center">
      <label for="skill">Indiquez ici une compétence</label>
      <input type="text" class="form-control white" id="skill">
    </div>
    <div id="skillStars" class="form-group text-center">
      <span class="text-muted" id="legend">Notez-vous !</span>
      <div id="stars" class="d-flex justify-content-center">
        <div id="star1" class="custom-cursor m-1"><i class="fal fa-star"></i><i class="fas fa-star"></i></div>
        <div id="star2" class="custom-cursor m-1"><i class="fal fa-star"></i><i class="fas fa-star"></i></div>
        <div id="star3" class="custom-cursor m-1"><i class="fal fa-star"></i><i class="fas fa-star"></i></div>
      </div>
    </div>
  </form>

  <div class="row text-center justify-content-center mt-5">
    <div class="custom-cursor save">
      <i class="fal fa-check-circle fa-2x col-12"></i>
      <p class="col-12">Enregistrer</p>
    </div>
  </div>
</div>
<div class="row justify-content-end">
  <div class="custom-cursor" id="toIdentity"><i class="fal fa-arrow-circle-right fa-2x"></i></div>
</div>

<script src="/static/assets/dist/js/ats_skill.min.js"></script>

