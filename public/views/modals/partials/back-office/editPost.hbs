<div class="modal-body">
    <div class="form-group">
        <label for="postValueEdit"> Nom du poste </label>
        <input class="form-control" type="text" id="postValueEdit">
    </div>
    <div class="form-group">
        <label for="postCategoryEdit"> Catégorie de poste </label>
        <select class="form-control" id="postCategoryEdit">
            <option value=""> Choisir une catégorie </option>
        </select>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" id="btnEditPost"> Modifier le poste </button>
</div>
<script>
    $.get('/api/categoriesPostsServices/all', function(data) {
        $.each(data.categories, function (i, category) {
            $('#postCategoryEdit').append($('<option>', {
                value: category.id,
                text : category.name
            }));
        });
    });
</script>