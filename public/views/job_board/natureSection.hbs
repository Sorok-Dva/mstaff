<div class=" text-left shadow-grey col-12 p-3 mb-4 natureSection">
  <h1 class="text-center">Nature de l'offre</h1>
  <form id="natureForm">

    <div class="form-group">
      <label for="natureDate">Date de création de l'offre</label>
      <input type="date" class="form-control input-blue" id="natureDate">
    </div>

    <div class="form-group">
      <label for="natureTitle">Titre de l'offre</label>
      <input type="text" class="form-control input-blue" id="natureTitle">
    </div>

    <div class="form-group">
      <label for="natureJobSheet">Métier</label>
      <textarea type="text" class="form-control input-blue" id="natureJobSheet"></textarea>
    </div>

    <div class="form-group">
      <label for="natureContractType">Type de contrat</label>
      <input type="text" class="form-control input-blue" id="natureContractType">
    </div>

    <div class="form-group">
      <label for="natureJobStartDate">Poste à pourvoir à partir du ...</label>
      <input type="date" class="form-control input-blue" id="natureJobStartDate">
    </div>

    <div class="form-group">
      <input type="text" class="form-control input-blue" id="natureContractDuration" placeholder="Durée du contrat">
    </div>

    <div class="form-group">
      <input type="text" class="form-control input-blue" id="natureGrade" placeholder="Grade">
    </div>

    <div class="form-group">
      <input type="text" class="form-control input-blue" id="natureCategory" placeholder="Catégorie">
    </div>

    <div class="form-group text-center">
      <button class="btn btn-info">Sauvegarder</button>
      <button class="btn btn-outline-info">Annuler</button>
      <button class="btn btn-outline-info">Effacer</button>
    </div>

  </form>
</div>

<script src="/static/assets/dist/js/job_board_nature.min.js"></script>