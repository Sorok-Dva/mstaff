<script src="/static/assets/js/perfect-scrollbar.min.js" type="text/javascript"></script>
<script src="/static/assets/js/star-rating.min.js" type="text/javascript"></script>
<script src="/static/assets/js/dashboard.js"></script>
<script src="/static/javascripts/main.js"></script>
<script src="/static/javascripts/timepicker.js"></script>
<script>
    // $(document).ready(() => {
        // $("[data-toggle=popover]").popover();
        {{#if sequelizeError}}
            {{#each sequelizeError.errors as |error|}}
                $('#{{error.path}}').css('border', '3px solid red');
            {{/each}}
        {{/if}}

    // });

    {{#if error_msg}}
        $.notify({
            // options
            icon: 'fa fa-exclamation',
            title: '{{tr.partials.scripts.notify_error_title}} :',
            message: '{{error_msg}}',
        },{
            type: 'danger',
            allow_dismiss: true,
            newest_on_top: false,
            showProgressbar: false,
            placement: {
                from: 'bottom',
                align: 'left'
            },
            offset: 20,
            spacing: 10,
            z_index: 1031,
            delay: 5000,
            timer: 15000,
            animate: {
                enter: 'animated fadeInDown',
                exit: 'animated fadeOutUp'
            }
        });
        {{/if}}
        {{#if success_msg}}
        $.notify({
            // options
            icon: 'fa fa-check-circle',
            title: '{{tr.partials.scripts.notify_success_title}} :',
            message: '{{success_msg}}',
        },{
            type: 'success',
            allow_dismiss: true,
            newest_on_top: false,
            showProgressbar: false,
            placement: {
                from: 'bottom',
                align: 'left'
            },
            offset: 20,
            spacing: 10,
            z_index: 1031,
            delay: 5000,
            timer: 15000,
            animate: {
                enter: 'animated fadeInDown',
                exit: 'animated fadeOutUp'
            }
        });
        {{/if}}
</script>
