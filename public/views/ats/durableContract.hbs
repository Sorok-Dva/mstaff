<i id="backToPost" class="fal fa-arrow-circle-left fa-2x custom-cursor"></i>
<!-- Heading -->
<div class="height-80 d-flex flex-column justify-content-center">
  <div class="row justify-content-center mb-4 mb-md-6">
    <h2 class="text-center col-12 underline">Que recherchez-vous ?</h2>
  </div>

  <div id="contractChoices" class="row justify-content-center">
    <div class="card text-center col-6 height-20">
      <div class="card-body d-flex flex-column justify-content-between">
        <h2 class="card-title">CDI</h2>
        <div class="custom-control custom-switch">
          <input type="checkbox" class="custom-control-input" id="cdiToggle" name="CDI"
            {{#ifCond candidateDatas.wish.contractType '===' 'CDI'}} checked{{/ifCond}}>
          <label class="custom-control-label" for="cdiToggle"></label>
        </div>

      </div>
    </div>
    <div class="w-100"></div>

    <div class="card text-center col-6 height-20">
      <div class="card-body d-flex flex-column justify-content-between">
        <h2 class="card-title">Apprentissage / Contrat Pro</h2>
        <div class="custom-control custom-switch">
          <input type="checkbox" class="custom-control-input" id="cpToggle" name="CP"
            {{#ifCond candidateDatas.wish.contractType '===' 'CP'}} checked{{/ifCond}}>
          <label class="custom-control-label" for="cpToggle"></label>
        </div>

      </div>
    </div>
    <div class="w-100"></div>

    <div class="card text-center col-6 height-20">
      <div class="card-body d-flex flex-column justify-content-between">
        <h2 class="card-title">Collaboration Libérale</h2>
        <div class="custom-control custom-switch">
          <input type="checkbox" class="custom-control-input" id="clToggle" name="CL"
            {{#ifCond candidateDatas.wish.contractType '===' 'CL'}} checked{{/ifCond}}>
          <label class="custom-control-label" for="clToggle"></label>
        </div>

      </div>
    </div>
    <div class="w-100"></div>

    <div class="card text-center col-6 height-20">
      <div class="card-body d-flex flex-column justify-content-between">
        <h2 class="card-title">Installation / Association Libérale</h2>
        <div class="custom-control custom-switch">
          <input type="checkbox" class="custom-control-input" id="alToggle" name="AL"
            {{#ifCond candidateDatas.wish.contractType '===' 'AL'}} checked{{/ifCond}}>
          <label class="custom-control-label" for="alToggle"></label>
        </div>

      </div>
    </div>
    <div class="w-100"></div>

    <div class="card text-center col-6 height-20">
      <div class="card-body d-flex flex-column justify-content-between">
        <h2 class="card-title">Reprise Cabinet Libéral</h2>
        <div class="custom-control custom-switch">
          <input type="checkbox" class="custom-control-input" id="rclToggle" name="RCL"
            {{#ifCond candidateDatas.wish.contractType '===' 'RCL'}} checked{{/ifCond}}>
          <label class="custom-control-label" for="rclToggle"></label>
        </div>

      </div>
    </div>
    <div class="w-100"></div>
  </div>
</div>
<div class="row justify-content-end">
  <div class="custom-cursor" id="toTime"><i class="fal fa-arrow-circle-right fa-2x"></i></div>
</div>

<script src="/assets/dist/js/ats/ats_contract.min.js"></script>