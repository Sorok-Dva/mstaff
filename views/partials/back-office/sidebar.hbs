<div class="sidebar" data-background-color="white" data-active-color="success">
    <!--
        Tip 1: you can change the color of the sidebar's background using: data-background-color="white | brown"
        Tip 2: you can change the color of the active button using the data-active-color="primary | info | success | warning | danger"
    -->
    <div class="logo">
        <a href="#" class="simple-text logo-mini">
            MS
        </a>
        <a href="#" class="simple-text logo-normal">
            Mstaff
        </a>
    </div>
    <div class="sidebar-wrapper">
        <ul class="nav">
            <li{{#ifCond a.main '===' 'dashboard'}} class="active"{{/ifCond}}>
                <a data-toggle="collapse" href="#dashboardOverview"
                   aria-expanded="{{#ifCond a.main '===' 'dashboard'}}true{{else}}false{{/ifCond}}">
                    <i class="ti-panel"></i>
                    <p>Dashboard
                        <b class="caret"></b>
                    </p>
                </a>
                <div class="collapse{{#ifCond a.main '===' 'dashboard'}} in{{/ifCond}}" id="dashboardOverview">
                    <ul class="nav">
                        <li{{#ifCond a.sub '===' 'overview'}} class="active"{{/ifCond}}>
                            <a href="/back-office/">
                                <span class="sidebar-mini">O</span>
                                <span class="sidebar-normal">Overview</span>
                            </a>
                        </li>
                        <li{{#ifCond a.sub '===' 'stats'}} class="active"{{/ifCond}}>
                            <a href="/back-office/stats">
                                <span class="sidebar-mini">S</span>
                                <span class="sidebar-normal">Stats</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </li>
            <li{{#ifCond a.main '===' 'users'}} class="active"{{/ifCond}}>
                <a data-toggle="collapse" href="#usersOverview"
                   aria-expanded="{{#ifCond a.main '===' 'users'}}true{{else}}false{{/ifCond}}">
                    <i class="ti-user"></i>
                    <p>Utilisateurs
                        <b class="caret"></b>
                    </p>
                </a>
                <div class="collapse{{#ifCond a.main '===' 'users'}} in{{/ifCond}}" id="usersOverview">
                    <ul class="nav">
                        <li{{#ifCond a.sub '===' 'all'}} class="active"{{/ifCond}}>
                            <a href="/back-office/users/">
                                <span class="sidebar-mini">L</span>
                                <span class="sidebar-normal">Liste compl√®te</span>
                            </a>
                        </li>
                        <li{{#ifCond a.sub '===' 'candidates'}} class="active"{{/ifCond}}>
                            <a href="/back-office/users/candidates">
                                <span class="sidebar-mini">C</span>
                                <span class="sidebar-normal">Candidats</span>
                            </a>
                        </li>
                        {{#ifCond a.sub '===' 'profile'}}
                            <li class="active">
                                <a href="#">
                                    <span class="sidebar-mini">P</span>
                                    <span class="sidebar-normal">Profil d'un utilisateur</span>
                                </a>
                            </li>
                        {{/ifCond}}
                    </ul>
                </div>
            </li>
        </ul>
    </div>
</div>
