<i id="backToPost" class="fal fa-arrow-circle-left fa-2x custom-cursor"></i>
<!-- Heading -->
<div class="height-80 d-flex flex-column justify-content-center">
<div class="row justify-content-center mb-4 mb-md-6">
  <h1 class="text-center col-12 underline">Que recherchez-vous ?</h1>
</div>

<div id="contractChoices" class="row justify-content-center">
  <div class="card text-center col-6 height-20">
    <div class="card-body d-flex flex-column justify-content-between">
      <i class="fal fa-infinity fa-3x"></i>
      <h1 class="card-title">Un travail durable</h1>
      <div class="custom-control custom-switch">
        <input type="checkbox" class="custom-control-input" id="durableToggle" name="durable"
              {{#ifCond candidateDatas.wish.contractCategory '===' 'durable'}} checked{{/ifCond}}>
        <label class="custom-control-label" for="durableToggle"></label>
      </div>

    </div>
  </div>
  <div class="w-100"></div>

  <div class="card text-center col-6 height-20">
    <div class="card-body d-flex flex-column justify-content-between">
      <i class="fal fa-calendar-alt fa-3x"></i>
      <h1 class="card-title">Des missions ponctuelles</h1>
      <div class="custom-control custom-switch">
        <input type="checkbox" class="custom-control-input" id="punctualToggle" name="punctual"
          {{#ifCond candidateDatas.wish.contractCategory '===' 'punctual'}} checked{{/ifCond}}>
        <label class="custom-control-label" for="punctualToggle"></label>
      </div>
    </div>
  </div>
  <div class="w-100"></div>

  <div class="card text-center col-6 height-20">
    <div class="card-body d-flex flex-column justify-content-between">
      <i class="fal fa-smile fa-3x"></i>
      <h1 class="card-title">Un stage</h1>
      <div class="custom-control custom-switch">
        <input type="checkbox" class="custom-control-input" id="internshipToggle" name="internship"
          {{#ifCond candidateDatas.wish.contractCategory '===' 'internship'}} checked{{/ifCond}}>
        <label class="custom-control-label" for="internshipToggle"></label>
      </div>
    </div>
  </div>
  <div class="w-100"></div>
</div>
</div>
<div class="row justify-content-end">
  <div class="custom-cursor" id="toTime"><i class="fal fa-arrow-circle-right fa-2x"></i></div>
</div>

<script src="/assets/dist/js/ats/ats_contract.min.js"></script>