<script>
    $(document).ready(() => {
        // $("[data-toggle=popover]").popover();
        {{#if sequelizeError}}
            {{#each sequelizeError.errors as |error|}}
                $('#{{error.path}}').css('border', '3px solid red');
            {{/each}}
        {{/if}}
        let activeBtnLoader;
        $(document).on('click', '.btn-loader', (e) => {
            let $this = $(e.target);
            activeBtnLoader = $this;
            let loadingText = $this.attr('data-loading-text');
            if ($this.html() !== loadingText) {
                $this.data('original-text', $this.html());
                $this.html(loadingText);
            }
            setTimeout(function() {
                $this.html($this.data('original-text'));
            }, 10000);
        });
    });

    {{#if error_msg}}
        $.notify({
            // options
            icon: 'fa fa-exclamation',
            title: '{{tr.partials.scripts.notify_error_title}} :',
            message: '{{error_msg}}',
        },{
            type: 'danger',
            allow_dismiss: true,
            newest_on_top: false,
            showProgressbar: false,
            placement: {
                from: 'bottom',
                align: 'left'
            },
            offset: 20,
            spacing: 10,
            z_index: 1031,
            delay: 5000,
            timer: 15000,
            animate: {
                enter: 'animated fadeInDown',
                exit: 'animated fadeOutUp'
            }
        });
        {{/if}}
        {{#if success_msg}}
        $.notify({
            // options
            icon: 'fa fa-check-circle',
            title: '{{tr.partials.scripts.notify_success_title}} :',
            message: '{{success_msg}}',
        },{
            type: 'success',
            allow_dismiss: true,
            newest_on_top: false,
            showProgressbar: false,
            placement: {
                from: 'bottom',
                align: 'left'
            },
            offset: 20,
            spacing: 10,
            z_index: 1031,
            delay: 5000,
            timer: 15000,
            animate: {
                enter: 'animated fadeInDown',
                exit: 'animated fadeOutUp'
            }
        });
        {{/if}}
</script>
