<style>
  .overflow-vertical{
    overflow-y: scroll;
  }
  .height-max-60{
    max-height: 60vh;
  }
</style>

<a href="/"><i class="fal fa-arrow-circle-left fa-2x"></i></a>

<!-- Heading -->
<div class="height-80 d-flex flex-column justify-content-center">
  <div class="row justify-content-center mb-4 mb-md-6">
    <h1 class="text-center col-12 underline">Choisissez vos Ã©tablissements.</h1>
  </div>

  <div id="finessList" class="row justify-content-center height-max-60 overflow-vertical">
  {{#each arrays.group as |es|}}
    <div class="card text-center col-11">
      <div class="card-body d-flex flex-column justify-content-between">
        <h2 id="esName" class="card-title">{{es.town}} - {{es.name}}</h2>
        <div class="custom-control custom-switch">
          <input type="checkbox" class="custom-control-input" id="{{es.finess}}">
          <label class="custom-control-label" for="{{es.finess}}"></label>
        </div>

      </div>
    </div>
    <div class="w-100"></div>
  {{/each}}

  </div>

</div>
<div class="row justify-content-end">
  <div class="custom-cursor" id="toPost"><i class="fal fa-arrow-circle-right fa-2x"></i></div>
</div>

