{{#if user}}
  <nav class="navbar navbar-default"{{#if session.originalUser}} style=margin-top:35px;"{{/if}}>
    <div class="container-fluid">
      <div class="navbar-minimize">
        <button id="minimizeSidebar" class="btn btn-fill btn-icon"><i class="ti-more-alt"></i></button>
      </div>
      <div class="navbar-header">
        <button type="button" class="navbar-toggle">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar bar1"></span>
          <span class="icon-bar bar2"></span>
          <span class="icon-bar bar3"></span>
        </button>
        <a class="navbar-brand" href="#">
          {{title}}
        </a>
      </div>
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav navbar-right">
          <li class="dropdown">
            <a class="dropdown-toggle btn-rotate" href="#" id="notifications-dropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <i id="notificationsIcon" class="fal fa-bell" aria-hidden="true"></i>
              <span id="notificationsBadge" class="badge badge-danger"><i class="fa fa-spinner fa-pulse fa-fw" aria-hidden="true"></i></span>
            </a>
            <ul class="dropdown-menu notification-dropdown-menu" aria-labelledby="notifications-dropdown">
              <li>
                <h6 class="dropdown-header text-center" style="border-bottom: 1px solid black;">Notifications</h6>
                <a id="notificationsLoader" class="dropdown-item dropdown-notification" href="#">
                  <p class="notification-solo text-center">
                    <i id="notificationsIcon" class="fa fa-spinner fa-pulse fa-fw" aria-hidden="true"></i>
                    Chargement des derni√®res notifications...
                  </p>
                </a>

                <div id="notificationsContainer" class="notifications-container"></div>
                <div id="notificationData" class="notification-data-container"></div>

                <a id="notificationAucune" class="dropdown-item dropdown-notification" href="#">
                  <p class="notification-solo text-center">Aucune nouvelle notification</p>
                </a>
              </li>
              {{!--<li style="cursor: pointer; background-color: white" id="notif-see-all">
                <a class="dropdown-item dropdown-notification-all" href="/notifications">
                  Voir toutes les notifications
                </a>
              </li>--}}
              <li style="cursor: pointer; background-color: white; display: none" id="notif-back">
                <a class="dropdown-item dropdown-notification-all" href="#">
                  <i class="fal fa-check"></i>
                </a>
              </li>
            </ul>
          </li>
          <li class="dropdown">
            <a href="#notifications" class="dropdown-toggle btn-rotate" data-toggle="dropdown">
              {{user.fullName}}
              <i class="ti-settings"></i>
            </a>
            <ul class="dropdown-menu">
              <li><a href="/logout">{{tr.partials.header.li_item_logout}}</a></li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </nav>
{{/if}}

<script id="notificationTemplate" type="text/html">
  <li class="dropdown-item dropdown-notification notif-li" style="cursor: pointer;" data-notif-id="\{{id}}">
    <div class="notification-read">
      <i class="fal fa-times" aria-hidden="true" title="marquer comme lu"></i>
    </div>
    <div class="notifications-body">
      <p class="notification-texte">\{{subject}}</p>
      <p class="notification-date text-muted">
        <i class="fal fa-clock" aria-hidden="true"></i> \{{date}}
      </p>
    </div>
  </li>
</script>