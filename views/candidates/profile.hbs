<div class="row">
  <div class="col-lg-4 col-md-5">
    <div class="card card-user">
      <div class="image"></div>
      <div class="content">
        <div class="author">
          <img id="candidateAvatar" class="avatar border-white" src="/static/assets/images/face-0.jpg" />
          <h4 class="title">{{usr.firstName}} {{usr.lastName}}<br />
            <a href="#"><small>{{age usr.birthday 'years'}} ans</small></a>
          </h4>
        </div>
        <p class="description text-center">
          {{usr.candidate.description}}
          <a href="/profile/edit"><i class="fa fa-pencil"></i></a>
        </p>
      </div>
      <hr>
      <div class="text-center">
        <div class="row">
          <div class="col-md-3 col-md-offset-1">
            <h5>{{date usr.createdAt 'DD/MM/YY'}}<br /><small>Inscription</small></h5>
          </div>
          <div class="col-md-4">
            <h5>{{date usr.updatedAt 'DD/MM/YY'}}<br /><small>Dernière modification</small></h5>
          </div>
          <div class="col-md-3">
            <h5>40%<br /><small>du profil complété</small></h5>
          </div>
        </div>
      </div>
      <hr>
      <div class="text-center">
        <div class="row">
          <h5><i class="fa fa-phone"></i> {{usr.phone}}</h5>
          <h5><i class="fa fa-envelope"></i> {{usr.email}}</h5>
          <h5><i class="fas fa-map-marked-alt"></i> {{usr.postal_code}} {{usr.town}}</h5>
        </div>
      </div>
    </div>
    <div class="card">
      <div class="card-header">
        <h4 class="card-title"><i class="fa fa-film" aria-hidden="true"></i> Vidéo de présentation</h4>
        {{#if usr.candidate.video}}
          <span id="removeVideo" class="btn btn-danger pull-right"><i class="fa fa-trash"></i></span>
        {{else}}
          <span id="removeVideo" style="display: none" class="btn btn-danger pull-rigt"><i class="fa fa-trash"></i></span>
        {{/if}}
      </div>
      <div class="card-content text-center">
        <form id="file-upload-form" class="uploader" method="post" action="/api/candidate/add/video">
          <input id="file-upload" type="file" name="file" accept="video/mp4" />

          <label for="file-upload" id="file-drag">
            {{#if usr.candidate.video}}
              <video id="video-preview" style="width:inherit" controls>
                <source src="/static/uploads/candidates/videos/{{usr.candidate.video}}" id="videoSrc">
              </video>
            {{else}}
              <video id="video-preview" style="display:none;width:inherit" controls>
                <source src="" id="videoSrc">
              </video>
            {{/if}}
            Your browser does not support HTML5 video.


            <div id="start" {{#if usr.candidate.video}}style="display: none"{{/if}}>
              <i class="fa fa-video-camera fa-3x" aria-hidden="true"></i>
              <div>Choisir une vidéo ou déposer ici</div>
              <div id="notvideo" style="color:red;display:none">Veuillez selectionner un fichier dans un format vidéo traditionnel.</div>
              <span id="file-upload-btn" class="btn btn-primary">Selectionnez une vidéo</span>
              <div id="messages"></div>
            </div>
            <div id="response" style="display:none">
              <progress class="progress" id="file-progress" value="0">
                <span>0</span>%
              </progress>
            </div>
          </label>
        </form>
      </div>
    </div>
    <div class="card">
      <div class="card-header">
        <h4 class="card-title"><i class="fa fa-heart" aria-hidden="true"></i> Mes candidatures</h4>
        <button type="button" class="btn btn-success pull-right" style="margin-bottom: 5px;">
          <i class="fa fa-pencil-square-o" aria-hidden="true"></i> Modifier
        </button>
      </div>
      <div class="card-content">
        Soon
      </div>
    </div>
  </div>
    <div class="col-lg-8 col-md-7">
    <div class="card">
      <div class="card-header">
        <h4 class="card-title pull-left"><i class="fa fa-briefcase"></i> Expériences</h4>
        <a href="/formations" class="btn btn-success pull-right" style="margin-bottom: 5px;">
          <i class="fa fa-pencil-square-o" aria-hidden="true"></i> Modifier
        </a>
      </div>
      <div class="card-content table-responsive table-full-width">
        <table class="table table-hover">
          <thead>
          <tr class="info">
            <th>Date</th>
            <th>Établissement</th>
            <th>Poste</th>
            <th>Service</th>
          </tr>
          </thead>
          <tbody>
          {{#if usr.candidate.experiences}}
            {{#each usr.candidate.experiences as |xp|}}
              <tr>
                <td>
                  {{date xp.start 'MM/YYYY' }} -
                  {{#if xp.end}}
                    {{date xp.end 'MM/YYYY' }}
                  {{else}}
                    maintenant
                  {{/if}}
                  {{#if xp.internship}}
                    <small>(stage)</small>
                  {{/if}}
                </td>
                <td>{{xp.name}}</td>
                <td>{{xp.poste.name}}</td>
                <td>{{xp.service.name}}</td>
              </tr>
            {{/each}}
          {{else}}
            <tr class="text-center">
              <td colspan="4">Aucune donnée disponible</td>
            </tr>
          {{/if}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="col-lg-8 col-md-7">
    <div class="card">
      <div class="card-header">
        <h4 class="card-title pull-left"><i class="fa fa-graduation-cap"></i> Formations</h4>
        <a href="/formations" class="btn btn-success pull-right" style="margin-bottom: 5px;">
          <i class="fa fa-pencil-square-o" aria-hidden="true"></i> Modifier
        </a>
      </div>
      <div class="card-content table-responsive table-full-width">
        <table class="table table-hover">
          <thead>
          <tr class="info">
            <th style="width:25%"><i class="fa fa-book" aria-hidden="true"></i> Diplômes</th>
            <th style="width:75%"></th>
          </tr>
          </thead>
          <tbody>
          {{#if usr.candidate.formations}}
            {{#each usr.candidate.formations as |diploma|}}
              <tr>
                <td>
                  {{date diploma.start 'MM/YYYY' }} -
                  {{#if diploma.end}}{{date diploma.end 'MM/YYYY' }}{{else}}maintenant{{/if}}
                </td>
                <td>{{diploma.name}}</td>
              </tr>
            {{/each}}
          {{else}}
            <tr class="text-center">
              <td colspan="2">Aucune donnée disponible</td>
            </tr>
          {{/if}}
          </tbody>
        </table>
        {{#if usr.candidate.qualifications}}
          <table class="table table-hover">
            <thead>
            <tr class="info">
              <th style="width:25%"><i class="fa fa-book" aria-hidden="true"></i> Diplômes complémentaires</th>
              <th style="width:75%"></th>
            </tr>
            </thead>
            <tbody>
            {{#if usr.candidate.qualifications}}
              {{#each usr.candidate.qualifications as |diploma|}}
                <tr>
                  <td>
                    {{date diploma.start 'MM/YYYY' }} -
                    {{#if diploma.end}}{{date diploma.end 'MM/YYYY' }}{{else}}maintenant{{/if}}
                  </td>
                  <td>{{diploma.name}}</td>
                </tr>
              {{/each}}
            {{/if}}
            </tbody>
          </table>
        {{/if}}
      </div>
    </div>
  </div>
  <div class="col-lg-8 col-md-7">
    <div class="card">
      <div class="card-header">
        <h4 class="card-title pull-left"><i class="fa fa-briefcase"></i> Compétences</h4>
        <a href="/knowledges" class="btn btn-success pull-right" style="margin-bottom: 5px;">
          <i class="fa fa-pencil-square-o" aria-hidden="true"></i> Modifier
        </a>
      </div>
      <div class="card-content table-responsive table-full-width">
        <table class="table table-hover">
          <thead>
          <tr class="info">
            <th style="width:80%"><i class="fa fa-medkit" aria-hidden="true"></i> Soins techniques</th>
            <th></th>
          </tr>
          </thead>
          <tbody>
          {{#if usr.candidate.skills}}
            {{#each usr.candidate.skills as |knowledge|}}
              <tr>
                <td>{{knowledge.name}}</td>
                <td>
                  <div class="rating-stars text-center">
                    <ul class="stars-disabled" data-type="software">
                      <li class="star {{rating knowledge.stars 1}}" title="Je sais faire avec tutorat" data-value="1">
                        <i class="fa fa-star" disabled></i>
                      </li>
                      <li class="star {{rating knowledge.stars 2}}" title="Je sais faire en autonomie" data-value='2'>
                        <i class="fa fa-star" disabled></i>
                      </li>
                      <li class="star {{rating knowledge.stars 3}}" title="Je sais former" data-value='3'>
                        <i class="fa fa-star" disabled></i>
                      </li>
                    </ul>
                  </div>
                </td>
              </tr>
            {{/each}}
          {{else}}
            <tr class="text-center">
              <td colspan="2">Aucune donnée disponible</td>
            </tr>
          {{/if}}
          </tbody>
        </table>
        <table class="table table-hover">
          <thead>
          <tr class="info">
            <th style="width:80%"><i class="fa fa-stethoscope" aria-hidden="true"></i> Matériels et produits</th>
            <th></th>
          </tr>
          </thead>
          <tbody>
          {{#if usr.candidate.equipments}}
            {{#each usr.candidate.equipments as |equipment|}}
              <tr>
                <td>{{equipment.name}}</td>
                <td>
                  <div class="rating-stars text-center">
                    <ul class="stars-disabled" data-type="software">
                      <li class="star {{rating equipment.stars 1}}" title="Je sais faire avec tutorat" data-value="1">
                        <i class="fa fa-star" disabled></i>
                      </li>
                      <li class="star {{rating equipment.stars 2}}" title="Je sais faire en autonomie" data-value='2'>
                        <i class="fa fa-star" disabled></i>
                      </li>
                      <li class="star {{rating equipment.stars 3}}" title="Je sais former" data-value='3'>
                        <i class="fa fa-star" disabled></i>
                      </li>
                    </ul>
                  </div>
                </td>
              </tr>
            {{/each}}
          {{else}}
            <tr class="text-center">
              <td colspan="2">Aucune donnée disponible</td>
            </tr>
          {{/if}}
          </tbody>
        </table>
        <table class="table table-hover">
          <thead>
          <tr class="info">
            <th style="width:80%"><i class="fa fa-floppy-o" aria-hidden="true"></i> Logiciels</th>
            <th></th>
          </tr>
          </thead>
          <tbody>
          {{#if usr.candidate.softwares}}
            {{#each usr.candidate.softwares as |software|}}
              <tr>
                <td>{{software.name}}</td>
                <td>
                  <div class="rating-stars text-center">
                    <ul class="stars-disabled" data-type="software">
                      <li class="star {{rating software.stars 1}}" title="Je sais faire avec tutorat" data-value="1">
                        <i class="fa fa-star" disabled></i>
                      </li>
                      <li class="star {{rating software.stars 2}}" title="Je sais faire en autonomie" data-value='2'>
                        <i class="fa fa-star" disabled></i>
                      </li>
                      <li class="star {{rating software.stars 3}}" title="Je sais former" data-value='3'>
                        <i class="fa fa-star" disabled></i>
                      </li>
                    </ul>
                  </div>
                </td>
              </tr>
            {{/each}}
          {{else}}
            <tr class="text-center">
              <td colspan="2">Aucune donnée disponible</td>
            </tr>
          {{/if}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
